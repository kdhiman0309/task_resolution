        <script><![CDATA[var WeekEndUtil = Class.create();
WeekEndUtil.prototype = {
    initialize: function() {
    },
	
	friday: function() {
        var gdt = new GlideDateTime(gs.endOfThisWeek());
        var gd = gdt.getDate();
        gd.addDaysUTC(-2);
		return gd.getUTCValue();
    },
	
	isValid: function(date) {
		var gd = new GlideDate();
		gd.setValue(date);
		return gd.getDayOfWeekLocalTime() == 5;
	},
    type: 'WeekEndUtil'
};]]></script>
